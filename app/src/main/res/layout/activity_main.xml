<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="358dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_ip"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="IP"
                android:textSize="22sp"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/text_ip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="192.168.1.239"
                tools:layout_editor_absoluteX="131dp"
                tools:layout_editor_absoluteY="82dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_port"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Port"
                android:textSize="22sp"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="82dp" />

            <EditText
                android:id="@+id/text_port"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="1234"
                tools:layout_editor_absoluteX="131dp"
                tools:layout_editor_absoluteY="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_name"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="name"
                android:textSize="22sp"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="16dp" />

            <EditText
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                tools:layout_editor_absoluteX="131dp"
                tools:layout_editor_absoluteY="82dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fortestConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="开始实验"
                android:onClick="fortestClick"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="231dp" />

            <Button
                android:id="@+id/forSelectConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="选择"
                android:onClick="forSelectClick"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="231dp" />

            <Button
                android:id="@+id/forDragConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="拖拽"
                android:onClick="forDragClick"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="231dp" />


        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>